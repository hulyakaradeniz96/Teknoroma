@model Teknoroma.MODEL.Entity.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/UnitHead/Shared/Shared.cshtml";
    var categories = ViewBag.Category;
}


<div class="col-lg-3">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Create Category</h1>
    </div>

    @if (TempData["Info"] != null)
    {
        <span class="text-danger">@TempData["Info"]</span>
    }
    @using (Html.BeginForm("AddCategory", "UnitHead", FormMethod.Post, new { @class = "user" }))
    {


        <div class="form-group row col-sm-12">
            <div class="col-sm-12">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-user", placeholder = "Category Name", @type = "text" })
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row col-sm-12">
            <div class="col-sm-12">
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control form-control-user", placeholder = "Description", @type = "text" })
                @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
            </div>
        </div>


        <input type="submit" value="Save" class="btn btn-primary btn-user btn-block" />
    }
</div>



<div class="col-lg-6">
    @if (ViewBag.Category != null)
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Category List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                                <th>Description</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in categories)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@Html.ActionLink("Update", "UpdateCategory", new { id = item.ID }, new { @class = "btn btn-dark btn-user" })</td>
                                    <td>@Html.ActionLink("Delete", "DeleteCategory", new { id = item.ID }, new { @class = "btn btn-danger btn-user" })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>